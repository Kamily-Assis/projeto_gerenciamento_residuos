#pragma execution_character_set("utf-8")

#include<stdio.h>
#include<stdlib.h>

#include<string.h>

//Structs
typedef struct
{
    int dia;
    int mes;
    int ano;

}data;

typedef struct
{
    char rua[30];
    int num;
    char bairro[20];
    char estado[2];
    
}endereco;

typedef struct
{
    char nome[30];
    endereco ende_forne[50];

}fornecedor;

typedef struct
{
    float quant;
    data data_registro;
    
}material;

typedef struct
{
    int id;
    endereco ende_pc[100];
    
}ponto_coleta;


//Funções
int MenuFornecedor(char escolha);
int MenuMaterial(char escolha);
int MenuPontoColeta(char escolha);
void Relatorios(char escolha);

int main(void) {
  
//Menu Principal

char op_menu_p;
